<div class="topic-new-wrapper" >
  <div class="container">
    <div class= "row">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Picture</h1>
        <%= form_for @topic do |f| %>
          <div class="form-group">
            <%= f.label :写真を選択 %>
            <%= f.file_field :image%>
          </div>

          <div class="form-group">
            <%= f.label :コメントを追加 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>